# CONFIGURACIÓN DEL SISTEMA ERP RESTAURANTE
# ═══════════════════════════════════════════════════════════════════════════

# DATABASE - PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=directus
DB_PASSWORD=directus_password_123
DB_NAME=restaurante_erp

# BACKEND
NODE_ENV=development
PORT=4000
HOST=localhost

# JWT
JWT_SECRET=your-jwt-secret-key-1234567890-change-in-production
JWT_EXPIRES_IN=24h

# SESSION
SESSION_SECRET=your-session-secret-change-in-production

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004,http://localhost:8000

# Timezone
TZ=America/Bogota

# MAIL
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=noreply@restaurante.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_CLEANUP_INTERVAL=1
RESERVATION_AUTO_RELEASE_INTERVAL=5
RESERVATION_AUTO_RELEASE_MINUTES=30
